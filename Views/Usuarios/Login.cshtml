@model WebApplication4.Models.ViewModel.UsuarioLoginViewModels

@{
   
    ViewData["Title"] = "Iniciar sesión";
}



<section >
    <div class="container ">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row ">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-2 p-lg-5 text-black">
    
                                    <form asp-action="Login" method="post">
                                    <div class=" mb-3 align-items-center" >
                                        
                                       <img src="/img/Logo.jpeg"  alt="Alternate Text" height="80"   style="border:solid ; border-radius:8px" />
                                    </div>

                                    <h5 class="fw-normal mb-1 pb-3" style="letter-spacing: 1px;">Iniciar sesión en su cuenta</h5>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div data-mdb-input-init class="form-outline mb-2" >
                      
                                        <input  id="form2Example17" class="form-control form-control-lg"  asp-for="Nombre"  />
                                        <label class="form-label" for="form2Example17" asp-for="Nombre">Usuario</label>
                                        <span asp-validation-for="Nombre" class="text-danger"></span>

                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="Contrasenia" type="password" />
                                        <label class="form-label" for="form2Example27"  asp-for="Contrasenia"></label>
                                        <span asp-validation-for="Contrasenia" class="text-danger"></span>

                                    </div>
                                    <div class="pt-1 mb-2">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Iniciar Sesion</button>
                                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark  btn-lg m-lg-3">Cancelar</a>
                                    </div>

                                    <a class="small text-muted" href="#!">¿Has olvidado tu contraseña?</a>
                                             <p class="mb-3 pb-lg-2" style="color: #393f81;">¿No tienes una cuenta? <a href="#!"style="color: #393f81;">Register here</a>
                                             </p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

